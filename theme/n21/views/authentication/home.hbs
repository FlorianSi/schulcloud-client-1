<div class="container">
    <div class="row">
        <main class="col-md-8">
            <div class="hidden-md-up">
                {{> "authentication/forms/login"}}
            </div>

            <section class="card">
                <div class="card-block">
                    <div class="n21-blog">
                        <h4 class="title">Herzlich willkommen bei der Nieders√§chsischen Bildungscloud!</h4>
                        <div class="context"></div>
                    </div>
                </div>
            </section>
        </main>
        <aside class="col-md-4">
            <div class="hidden-sm-down">
                {{> "authentication/forms/login"}}
            </div>
        </aside>
    </div>
</div>
