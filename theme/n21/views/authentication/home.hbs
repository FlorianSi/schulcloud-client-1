{{/content}}

{{#content "scripts" mode="append"}}
<script src="/scripts/login.js" type="text/javascript" defer></script>
<script src="/scripts/n21-blog.js" type="text/javascript" data-contentkey="{{getConfig "N21_BLOG_CONTENT_API_KEY"}}" defer></script>
{{/content}}

{{#content "body"}}
