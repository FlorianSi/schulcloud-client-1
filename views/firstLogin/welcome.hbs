{{#extend "lib/loggedin"}}
	{{#content "styles" mode="append"}}
		<link rel="stylesheet" href="/styles/courses/empty-state.css"/>
	{{/content}}
	{{#content "page"}}
		<section class="empty-state">
		  <img src="/images/empty-states/lehrer_klasse.svg" alt="Lehrer mit Klasse" class="image mx-auto d-block"/>
		  <div class="text-wrapper mx-auto d-block">
			<h2 class="text-center">{{$t "firstLogin.text.welcomeTo" }} {{theme.title}}, {{currentUser.displayName}}</h2>
			{{#unless (userHasRole "student")}}
			  <h2 class="h5 text-muted text-center">
				  {{$t "firstLogin.text.withThe" }} {{theme.short_title}} {{$t "firstLogin.text.designLessonsDigitally" }}
			  </h2>
			{{/unless}}
			</div>
			<div class="row">
				<div class="center buttons">
					{{#if (userHasRole "student")}}
						<a href="/courses/" class="btn btn-primary btn-lg btn-add">{{$t "firstLogin.link.toYourCourses" }}</a>
					{{else}}
						<a href="/courses/add" class="btn btn-primary btn-lg btn-add">{{$t "firstLogin.link.createYourFirstCourse" }}</a>
					{{/if}}
				</div>
			</div>

		</section>
	{{/content}}
{{/extend}}
