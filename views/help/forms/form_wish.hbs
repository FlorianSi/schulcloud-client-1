<input type="hidden" name="target" value="HPI">
<input type="hidden" name="type" value="wish">

<label class="form-group">
	<span class="control-label" for="title">{{$t "help.form_Wish.label.briefDescriptionOfTheRequest" }}</span>
	<input type="text" name="title" id="wishTitle" placeholder="Kurzbeschreibung des Wunsches" class="form-control" required>
</label>
<label class="form-group">
	<span class="control-label">{{$t "help.form_Wish.label.as" }}</span>
	<input type="text" name="role" placeholder="z.B. Schüler, Lehrer, Administrator, Hausmeister usw." class="form-control" required>
</label>
<label class="form-group">
	<span class="control-label">{{$t "help.form_Wish.label.iWouldLikeTo" }}</span>
	<textarea class="form-control" cols="50" name="desire" rows="6" placeholder="z.B. eine im System angelegte Schüleraufgabe leicht auffinden und ändern können" required></textarea>
</label>
<label class="form-group">
	<span class="control-label">{{$t "help.form_Wish.label.around" }}</span>
	<textarea class="form-control" cols="50" name="benefit" rows="6" placeholder="z.B. sie zu aktualisieren" required></textarea>
</label>
<label class="form-group">
	<span class="control-label optional">{{$t "help.form_Wish.label.acceptanceCriteria" }}</span>
	<textarea class="form-control" cols="50" name="acceptanceCriteria" rows="6" placeholder="z.B. Nach der Systemanmeldung gelange ich in maximal zwei Schritten zum Stundenkontext, kann die Schüleraufgabe dort mit einem Klick bearbeiten und die SchülerInnen bei Bedarf automatisch über die Änderung informieren."></textarea>
</label>
<label class="form-group">
	<span class="control-label optional">{{$t "help.form_Wish.label.device" }}</span>
	<input type="text" name="device" placeholder="z.B. iPhone X, Samsung Galaxy S10" class="form-control">
</label>
<label class="form-group">
	<span class="control-label" for="email">
		{{$t "help.form_Wish.label.replyEmail" }}
	</span>
	<input type="email" name="replyEmail" placeholder="E-Mail-Adresse" value="{{ userEmail }}" class="form-control" required>
</label>
<hr>
<p>{{$t "help.global.label.furtherInformation" }}</p>
<label>
<div class="row">
	<div class="col-xs-2">
		<input type="checkbox" id="consent" name="consent" value="true" checked>
	</div>
	<div class="col-xs-10">
		<span class="control-label" for="consent">
			{{$t "help.form_Wish.text.iAgreeThatTheFollowingInformation" }}
			<li>{{$t "help.global.text.browserNameAndVersion" }}</li>
			<li>{{$t "help.global.text.operatingSystemAndVersion" }}</li>
		</span>
	</div>
</div>
</label>
{{#ifEnv "FEATURE_CONTACT_FORM_ATTACHMENTS_ENABLED" "true"}}
<br>
<label class="form-group">
    <span class="control-label">Bilder, Videos und Dateien (max. {{ ../formAttachmentsSize }}MB):</span>
    <input type="file" class="form-control-file" name="file" multiple="multiple" accept="image/*,video/*,application/msword,application/pdf"
		data-max-attachment-size-mb="{{ ../formAttachmentsSize }}">
</label>
{{/ifEnv}}
<hr>
<span class="control-label file-alert"></span>
