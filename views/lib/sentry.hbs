{{#ifneq @root.SENTRY_DSN false}}
<script src="/vendor-optimized/@sentry/browser/build/bundle.min.js"></script>
<script>
	Sentry.init({ 
		dsn: "{{@root.SENTRY_DSN}}",
		environment:  "{{@root.domain}}",
		release: "schulcloud-client-browser@{{@root.version}}",
	});
	Sentry.configureScope((scope)=>{
		scope.setLevel('info');
		{{#if @root.currentUser}}
		scope.setUser({ "id": "{{@root.currentUser._id}}" });
		{{/if}}
		scope.setTag("env","{{@root.env}}");
		scope.setTag("sha","{{@root.sha}}");
		scope.setTag("version","{{@root.version}}");
	});
	dewdewdew();
</script>
{{/ifneq}}
