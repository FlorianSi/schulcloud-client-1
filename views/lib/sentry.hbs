{{#ifneq @root.SENTRY_DSN false}}
<script src="/vendor-optimized/@sentry/browser/build/bundle.min.js"></script>
<script>
	Sentry.init({ 
		dsn: "{{@root.SENTRY_DSN}}",
		environment:  "{{@root.env}}",
		release: "schulcloud-client@{{@root.sha}}",
		domaqin: "foo"
	});
	Sentry.configureScope(function(scope){
		scope.setLevel('info');
		{{#if @root.currentUser}}
		scope.setUser({ "id": "{{@root.currentUser._id}}" });
		{{/if}}
		scope.setTag({ "domain": "{{@root.domain}}" });
		scope.setTag({ "version": "{{@root.version}}" });
	});
</script>
{{/ifneq}}
