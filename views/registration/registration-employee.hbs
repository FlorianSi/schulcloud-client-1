{{#extend "lib/simple"}}
  {{#content "scripts" mode="append"}}
      <script src="/scripts/pwrecovery.js" type="text/javascript" defer></script>
      <script src="/scripts/dataprivacy/user-registration.js" type="text/javascript" defer></script>
  {{/content}}
  {{#content "styles" mode="append"}}
      <link rel="stylesheet" href="/styles/administration/dataprivacy.css"/>
  {{/content}}
  {{#content "page"}}
    {{#embed "lib/forms/paginatedForm" sections=sectionNumber action="/registration/submit" method="post" class="registration-form parent" submit-label="Absenden & Loslegen"}}
      {{#content "panels"}}
      <input type="hidden" name="classOrSchoolId" value="{{user.classOrSchoolId}}"/>
      <input type="hidden" name="roles" value="employee"/>

      {{#if user.sso}}<input type="hidden" name="sso" value="{{user.sso}}"/>{{/if}}
      {{#if user.account}}<input type="hidden" name="account" value="{{user.account}}"/>{{/if}}

      {{#if user.importHash}}<input type="hidden" name="importHash" value="{{user.importHash}}"/>{{/if}}
      {{#if user.userId}}<input type="hidden" name="userId" value="{{user.userId}}"/>{{/if}}
      {{#if invalid}}<input type="hidden" name="invalid" value="{{invalid}}" />{{/if}}

      <section data-panel="section-1" class="noback">
        <h2 class="h4">{{$t "registration._registration.heading.welcomeToTheregister" }} {{theme.title}}</h2>
        <p>{{$t "registration._registration.text.weArePleasedThatYou" }} {{theme.title}} {{$t "registration._registration.text.wantToUseAndHelp" }}</p>
        <p>{{$t "registration._registration.text.pleaseRegisterInTheFirst" }} {{theme.title}} {{$t "registration._registration.text.andAgreeToTheTerms" }}</p>

        <p class="mt-2 explanation nomargin">* {{$t "registration._registration.text.linguisticNote" }} {{theme.short_title}} {{$t "registration._registration.text.theMailForm" }} {{theme.short_title}} {{$t "registration._registration.text.isThereForEveryone" }} ðŸŒˆðŸŽ‰ðŸ¦„
        </p>
      </section>



      <section data-panel="section-2">
        <h2 class="h4">{{$t "registration._registration.employee.heading.yourData" }}</h2>
        <p>{{$t "registration._registration.global.text.the" }} {{theme.short_title}} {{$t "registration._registration.global.text.storesUsersData" }}</p>

        <p>{{$t "registration._registration.global.text.forTheUseOfThe" }} {{theme.short_title}} {{$t "registration._registration.parent.text.needFollowingInformationForChild" }}</p>
        <div class="row">
          <div class="form-group col-md-6 col-sm-12">
            <label>{{$t "registration._registration.global.label.firstName" }} <sup>*</sup></label>
            <input class="form-control linked" name="firstName" type="text" placeholder="Ihren Vornamen hier eingeben"
              value="{{user.firstName}}" required {{#if user.firstName}}readonly{{/if}}/>
          </div>
          <div class="form-group col-md-6 col-sm-12">
            <label>{{$t "registration._registration.global.label.lastName" }} <sup>*</sup></label>
            <input class="form-control linked" name="lastName" type="text" placeholder="Ihren Nachname hier eingeben" 
              value="{{user.lastName}}" required {{#if user.lastName}}readonly{{/if}}/>
          </div>
        </div>

        <div class="form-group">
          <label>{{$t "registration._registration.employee.input.yourEmailAddress" }} <sup>*</sup></label>
          <input class="form-control linked" type="email" name="email" placeholder="lehrer@schul-cloud.org" 
            value="{{user.email}}" required {{#if user.email}}readonly{{else}}autocomplete{{/if}} />
        </div>

        {{> "lib/forms/password-hint" style="margin-top:1rem"}}
        <div class="row">
          <div class="form-group col-md-6 col-sm-12" style="margin-top:0;">
            <label>{{$t "registration._registration.employee.label.password" }} <sup>*</sup></label>
            <input
              class="form-control linked"
              id="password"
              name="password_1"
              type="password"
              placeholder="Passwort"
              minlength="8"
              pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[a-z])(?=.*[\-_!<>Â§$%&\/()=?\\;:,.#+*~']).{8,255}$"
              title="{{> "lib/forms/password-hint" plaintext=true}}"
              required/>
          </div>
          <div class="form-group col-md-6 col-sm-12" style="margin-top:0;">
            <label>{{$t "registration._registration.employee.label.repeatPassword" }} <sup>*</sup></label>
            <input
                    class="form-control"
                    id="password-control"
                    name="password_2"
                    type="password"
                    placeholder="Passwort wiederholen"
                    minlength="8"
                    pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[a-z])(?=.*[\-_!<>Â§$%&\/()=?\\;:,.#+*~']).{8,255}$"
                    title="{{> "lib/forms/password-hint" plaintext=true}}"
                    required/>
          </div>
        </div>
      </section>


      {{#if needConsent}}
        <section data-panel="section-3">
          <h2 class="h4">{{$t "registration._registration.global.heading.declarationOfConsent" }}</h2>
          <p>{{$t "registration._registration.employee.text.pleaseconfirmTheFollowingDeclarations" }} {{theme.title}} {{$t "registration._registration.global.text.canUse" }}</p>
          <p>{{$t "registration._registration.global.text.i" }}, <b data-from="firstName"></b> <b data-from="lastName"></b>, {{$t "registration._registration.global.text.explainTheFollowing" }}</p>
            {{#embed "registration/forms/einwilligungserklaerung"}}{{/embed}}
        </section>
      {{/if}}



      <section data-panel="section-4" class="submit-page" data-feature="pin">
        <h2 class="h4">{{$t "registration._registration.global.heading.almostThere" }}</h2>
        {{#embed "registration/request-pin"}}{{/embed}}
        <div id="pinverification">
            {{#embed "registration/pin" digits=4 pattern="[0-9]" required="true" name="pin" class="mail-validation my-1"}}{{/embed}}
        </div>
      </section>



      <section data-panel="section-5">
        <h2 class="h4">{{$t "registration._registration.global.heading.thankYouForRegistering" }} {{theme.short_title}}</h2>
        <p>{{$t "registration._registration.employee.text.youCanNowInThe" }} {{theme.title}} {{$t "registration._registration.employee.text.signIn" }}</p>

        <a class="btn btn-primary" href="/logout">{{$t "registration._registration.global.button.openLogin" }}</a>
      </section>
      {{/content}}
    {{/embed}}
  {{/content}}
{{/extend}}
