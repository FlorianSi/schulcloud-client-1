<section class="section section-{{section-id}}">
    {{#if title}}
    <div class="row">
        <div class="col-sm-12">
            <h2 class="h5 mb-1 mt-2"><a class="dashboard-title" href="{{href}}">{{title}}</a></h2>
        </div>
    </div>
    {{/if}}
    <div class="col-sm-12" data-testid="courses">
        {{#each content}}
            <a class="homework-link" href="{{this.url}}">
                <div class="card card-block homework-tile" style="border-left: 10px solid {{this.background}};">
                    <div class="text-muted">
                        <span>{{{ stripOnlyScript this.courseId.name }}}</span>
                        <span class="pull-right">{{{ stripOnlyScript this.secondaryTitle }}}</span>
                    </div>
                    <div data-id="{{id}}">
                        <div class="title">{{{ stripOnlyScript this.name }}}</div>
                    </div>
                </div>
            </a>
        {{/each}}
    </div>
</section>
