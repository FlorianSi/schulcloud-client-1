{{#content "styles" mode="append"}}
<link rel="stylesheet" href="/styles/form/index.css" />
{{/content}}

<div class="form-group">
    <select class="course-selection form-control" name="courseId" required="required">
        <option value="" disabled selected hidden>{{$t "content.label.chooseACourse" }}</option>
    </select>
</div>
<div class="form-group lessons" style="display: none">
    <select class="lesson-selection form-control" name="lessonId" required="required">
        <option value="" disabled selected hidden>{{$t "content.label.chooseALessonTopic" }}</option>
    </select>
</div>
<input type="hidden" name="title" value="{{title}}" />
<input type="hidden" name="client" value="{{client}}" />
<input type="hidden" name="url" value="{{url}}" />
<input type="hidden" name="description" value="{{description}}" />
<input type="hidden" name="query" value="{{query}}">
